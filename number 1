#include<stdio.h>
 int addition()
{
int a,b;
  printf("press two number:\n",a,b);
   scanf("%d%d",&a,&b);
 return printf("addition of a and b:%d\n",a+b);
  }
   int Substaction(){    int c,d;
   printf("press two number:\n",c,d);
     scanf("%d%d",&c,&d);
 return  printf(" Substaction of c and d:%d\n ",c-d);
   }
    int multiplication(){     int x,y;
    printf("press two number:\n",x,y);
      scanf("%d%d",&x,&y);
     return   printf("multiplication of x and y:%d\n",x*y);
    }
    int division(){
         int p,q;
            printf("press two number:\n",p,q);
               scanf("%d%d",&p,&q);
               if( q > p || q==0 )
               {
                   return printf("error") ;
               }
                else{return   printf("division of p and q :%d\n",p/q);}
    }
    int main(){
          printf("%\n",addition());
            printf("%\n", Substaction());
              printf("%\n",multiplication());
   printf("%\n",division());
return 0;
    }
